<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="7dp"
    card_view:cardElevation="5dp"
    card_view:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/head_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/heading_summer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head_img"
            android:layout_marginTop="10sp"
            android:padding="13sp"
            android:text="@string/summer_training"
            android:textColor="#5c5c7b"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descrp_summer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heading_summer"
            android:layout_centerVertical="true"
            android:padding="13sp"
            android:text="@string/summer_training_discrp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="100sp"
            android:layout_height="30sp"
            android:layout_below="@+id/descrp_summer"
            android:layout_marginBottom="12sp"
            android:layout_marginLeft="8sp"
            android:layout_toRightOf="@+id/button4"
            android:background="#e27e4f"
            android:onClick="learnmore_summer"
            android:text="@string/learn_more"
            android:textColor="#fff" />

        <Button
            android:id="@+id/button4"
            android:layout_width="100sp"
            android:layout_height="30sp"
            android:layout_alignBottom="@+id/button3"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:background="#e27e4f"
            android:onClick="batchesActivity"
            android:text="Batches"
            android:textColor="#fff" />
        />
    </RelativeLayout>
</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        card_view:cardPreventCornerOverlap="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="10dp"

   >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="200sp"
                android:layout_height="match_parent"
                android:background="#d8dadf"
                android:id="@+id/rl">
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="36dp"
                    android:layout_height="46sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView4"
                    android:layout_centerHorizontal="true"
                    android:text="MTA-INDIA"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginTop="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/logo"
                    android:src="@drawable/ic_group" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginBottom="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/imageView4"
                    android:onClick="gallaryActivity"
                    android:src="@drawable/ic_linked_camera" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/rl"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar4"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/real"
                    android:id="@+id/recycleViewH"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycleViewHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/recycleViewH"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycleView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:visibility="visible"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        />
                </RelativeLayout>



            </RelativeLayout>
        </RelativeLayout>
        </android.support.v7.widget.CardView>
</RelativeLayout>